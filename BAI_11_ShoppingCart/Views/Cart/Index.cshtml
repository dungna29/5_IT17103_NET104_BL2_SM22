@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Index</h1>

<h3>Giỏ Hàng</h3>
<table cellpadding="2" cellspacing="2" border="1">
    <tr>
        <th>Option</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>
    @foreach (var x in ViewBag.cart)
    {
        <tr>
            <td>
                <a asp-controller="Cart" asp-action="Remove" asp-route-id="@x.Product.Id">Xóa</a>
            </td>
            <td>@x.Product.Id</td>
            <td>@x.Product.Name</td>
            <td>@x.Product.Name</td>
            <td><img src="~/Images/@x.Product.Photo" width="60px" /></td>
            <td>@x.Product.Price</td>
            <td>@x.Quantity</td>
            <td>@(x.Quantity* x.Product.Price)</td>
        </tr>
    }
    <tr>
        <td align="right" colspan="6">Tổng</td>
        <td>
            @ViewBag.total
        </td>
    </tr>
</table>
<br />
<a asp-controller="Product" asp-action="Index">Tiếp tục mua hàng</a>
<a asp-controller="Cart" asp-action="CheckOut">Thanh toán ngay</a>