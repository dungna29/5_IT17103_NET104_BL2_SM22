@model BAI_11_ShoppingCart.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<h3>Danh sách sản phẩm</h3>
<table cellpadding="2" cellspacing="2" border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Buy</th>
    </tr>
    @foreach (var x in ViewBag.product)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Name</td>
            <td><img src="~/Images/@x.Photo" width="60px"/></td>
            <td>@x.Price</td>
            <td align="center">
                <a asp-controller="Cart" asp-action="Buy" asp-route-id="@x.Id">Mua Ngay</a>

                <form asp-controller="Cart" asp-action="Buy" asp-route-id="@x.Id">
                    <input type="submit" class="btn btn-primary" value="Mua ngay" />
                </form>
            </td>

        </tr>
    }
</table>